<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>bigmumbai</title>
    <style>
        body {
            background: #000;
            /* Adjust as needed */
            color: #fff;
            font-family: Arial, sans-serif;
        }
        .game-history-container {
            max-width: 800px;
            margin: 20px auto;
            /* Center the table */
            padding: 20px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        }
        .game-history-table {
            width: 100%;
            border-collapse: collapse;
            color: #fff;
        }

        .game-history-table thead {
            background: rgba(255, 255, 255, 0.2);
        }

        .game-history-table th,
        .game-history-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .game-history-table th {
            font-weight: bold;
            color: #0ff;
            text-transform: uppercase;
        }

        .game-history-table tr:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .game-history-table td {
            font-size: 14px;
        }

        .game-history-table td:nth-child(5) {
            font-size: 12px;
            /* Adjust for the date column */
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .game-history-container {
                padding: 10px;
            }

            .game-history-table th,
            .game-history-table td {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <%- include("../partials/flash.ejs") %>
        <h1 style="text-align: center;">Your Game History</h1>
        <div style="max-width: 100vw;overflow: scroll;" class="game-history-container">
            <table class="game-history-table">
                <thead>
                    <tr>
                        <th>Bet Amount</th>
                        <th>Choosed Bet</th>
                        <th>Cycle ID</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% gameHistory.forEach(history=> { %>
                        <tr>
                            <td>
                                <%= history.betAmount %>
                            </td>
                            <td>
                                <%= history.choosedBet %>
                            </td>
                            <td>
                                <%= history.currCycleId %>
                            </td>
                            <td>
                                <%= history.status %>
                            </td>
                            <td>
                                <%= history.date %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <button style="position: fixed; top: 20px; left:10px; color: white;background-color: black;font-size: large;font-weight: bolder;border: 1px solid white;border-radius: 10px;padding: 5px;" onclick="window.location.href='/main'">BACK</button>
</body>
</html>