<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        h1 {
            color: #0ff;
        }

        .table thead th {
            color: #fff;
            background-color: #343a40;
        }

        .game-history-container {
            height: 80vh;
            width: 100vw;
            overflow-y: auto;
            overflow-x: hidden;
            padding: 15px;
        }

        .body-glassmorphism {
            background: rgba(19, 32, 221, 0.5);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin: 0;
            color: white;
        }


        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
            /* Custom hover effect */
        }

        .table td,
        .table th {
            vertical-align: middle;
            text-align: center;
        }

        /* Responsive tweaks (Optional) */
        @media (max-width: 768px) {

            .table th,
            .table td {
                font-size: 14px;
            }
        }
    </style>
</head>

<body class="body-glassmorphism">
    <h1 class="text-center mb-4">Game History</h1>
    <div class="container game-history-container">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>User ID</th>
                        <th>Bet Amount</th>
                        <th>Choosed Bet</th>
                        <th>Cycle ID</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% gameHistory.forEach(history=> { %>
                        <tr>
                            <td>
                                <%= history.userId %>
                            </td>
                            <td>
                                <%= history.betAmount %>
                            </td>
                            <td>
                                <%= history.choosedBet %>
                            </td>
                            <td>
                                <%= history.currCycleId %>
                            </td>
                            <td>
                                <%= history.status %>
                            </td>
                            <td>
                                <%= history.date %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <%-include("../partials/custom-footer.ejs")%>
</body>

</html>