<!DOCTYPE html>
<html>
<head>
<title>BigMumbai</title>
<style>
@font-face {
  font-family: 'Neon Glow';
  src: url(https://assets.codepen.io/230569/NeonGlow-8VLz.ttf);
}
* {
  box-sizing: inherit;
  margin: 0;
  padding: 0;
}
html {
  background-color: #101010!important;
  box-sizing: border-box;
}
main {
  align-items: center;
  display: flex;
  justify-content: center;
  min-height: 100vh;
}
#gasses {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  
  > * {
    margin: 2rem;
  }
}
.symbol{
  text-align: center;
}

.gas {
  --blur: 1.75rem;
  --box-blur: calc(0.5 * var(--blur));
  --glow: var(--color);
  --size: 20rem;
  
  align-items: center;
  border-radius: 12px;
  border: 4px solid currentColor;
  box-shadow: 
    /* --- "glass" tube --- */
    /* inside */ inset 0 0 0 2px rgba(0, 0, 0, 0.15),
    /* outside */      0 0 0 2px rgba(0, 0, 0, 0.15),
    /* --- glow --- */
    /* inside */ inset 0 0 var(--box-blur) var(--glow),
    /* outside */      0 0 var(--box-blur) var(--glow);
  color: var(--color, white);
  display: inline-flex;
  flex-direction: column;
  font-family: system-ui, sans-serif;
  height: var(--size);
  justify-content: space-around;
  padding: 1rem;
  width: var(--size);
  
  > * {
    margin: 0;
    padding: 0;
  }
  
  .number { 
    font-weight: 700; 
  }
  
  .symbol { 
    font-size: 3rem; 
    font-family: 'Neon Glow';
    text-shadow: 0 0 var(--blur) var(--glow);
  }
  
  &.he { --color: #FCEAAC; filter: saturate(175%); }
  &.ne { --color: #FDA802; filter: brightness(110%); }
  &.ar { --color: #E555C7; filter: brightness(125%); }
  &.kr { --color: #B7E7F7; filter: saturate(200%); }
  &.xe { --color: #C4C4C6; filter: brightness(105%); }
}
footer{
  margin-top: 100px;
}
</style>
</head>
<body>
<h1 style="text-align: center;">Admin Panel</h1>
<main>
  <div id="gasses">
    <div onclick="window.location.href='/admin/users'" class="gas he">
      <span class="number">?</span>
      <h2 class="symbol">USERS</h2>
      <p class="name">USERS</p>
    </div>
    <div onclick="window.location.href='/admin/pending-deposits'" class="gas ne">
      <span class="number">?</span>
      <h2 class="symbol">DEPOSIT</h2>
      <p class="name">RECHARGE</p>
    </div>
    <div onclick="window.location.href='/admin/withdrawals'" class="gas ar">
      <span class="number">?</span>
      <h2 class="symbol">WITHDRAWAL</h2>
      <p class="name">REQUEST</p>
    </div>
    <div onclick="window.location.href='/admin/wingobet'" class="gas kr">
      <span class="number">?</span>
      <h2 class="symbol">WingoBet</h2>
      <p class="name">wingoBet Overview</p>
    </div>
    <div onclick="window.location.href='/admin/dashboard'" class="gas xe">
      <span class="number">?</span>
      <h2 class="symbol">DASHBOARD</h2>
      <p class="name">INFORMATION</p>
    </div>
    <div onclick="window.location.href='/admin/info'" class="gas ne">
      <span class="number">?</span>
      <h2 class="symbol">EDIT</h2>
      <p class="name">EDITðŸŽˆ</p>
    </div>
    <div onclick="window.location.href='/admin/wingooneresult'" class="gas ar">
      <span class="number">?</span>
      <h2 class="symbol">Wingo Result Edit</h2>
      <p class="name">EDIT-1</p>
    </div>
    <div onclick="window.location.href='/admin/game-history'" class="gas xe">
      <span class="number">?</span>
      <h2 class="symbol">Wingo-1 History</h2>
      <p class="name">HISTORY</p>
    </div>
    <div onclick="window.location.href='/admin/edit'" class="gas he">
      <span class="number">?</span>
      <h2 class="symbol">Admin</h2>
      <p class="name">C Y P</p>
    </div>
  </div>
</main>
<footer>
<%-include("../partials/noChangeFooter.ejs")%>
</footer>
</body>
</html>
