<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Wingo Bet</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <h1>Admin Wingo Bet Overview</h1>
    <table>
        <thead>
            <tr>
                <th>Choosed Bet</th>
                <th>Date</th>
                <th>Total Amount</th>
                <th>User Count</th>
                <th>User IDs and Times</th>
            </tr>
        </thead>
        <tbody>
            <% results.forEach(item => { %>
                <tr>
                    <td><%= item.choosedBet %></td>
                    <td><%= item.date %></td>
                    <td><%= item.totalAmount %></td>
                    <td><%= item.userCount %></td>
                    <td>
                        <% item.userIds.forEach(user => { %>
                            <div>
                                <%= user.userId %> (<%= new Date(user.date).toLocaleString() %>)
                            </div>
                        <% }) %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <%-include("../partials/custom-footer.ejs")%>
</body>
</html>
