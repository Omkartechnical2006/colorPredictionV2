<!-- views/adminInfo.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Info</title>
    <!-- Bootstrap CSS CDN -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <%- include("../partials/flash.ejs") %>
        <h1 class="mb-4">Edit Info</h1>
        <form id="infoForm" action="/admin/info?_method=PUT" method="POST">
            <div class="form-group">
                <label for="telegramLink">Telegram Link:</label>
                <input type="url" id="telegramLink" name="telegramLink" class="form-control" value="<%= info.telegramLink %>" required>
            </div>
            <div class="form-group">
                <label for="qrCodeLink">QR Code Link:</label>
                <input type="url" id="qrCodeLink" name="qrCodeLink" class="form-control" value="<%= info.qrCodeLink %>" required>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
   <%-include("../partials/custom-footer.ejs")%>
</body>
</html>
